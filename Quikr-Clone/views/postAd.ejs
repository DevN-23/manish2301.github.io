            <form role="form" method="post" action="/api/postad" id="contact-form" class="contact-form">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="adTitle">Ad Title</label>
                            <input type="text" class="form-control" name="adTitle" required autocomplete="off" id="adTitle" placeholder="Enter Ad Title">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sName">Seller Name</label>
                            <input type="text" class="form-control" name="sName" required autocomplete="off" id="sName" placeholder="Enter Seller Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" name="price" required autocomplete="off" id="price" placeholder="Enter Price">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="contactNo">Contact No.</label>
                            <input type="text" class="form-control" name="contactNo" required autocomplete="off" id="contactNo" placeholder="Enter your phone number">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="emailId">E-Mail</label>
                            <input type="text" class="form-control" name="emailId" required autocomplete="off" id="emailId" placeholder="Enter your Email address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="brand">Brand Name</label>
                            <input type="text" class="form-control" name="brand" required autocomplete="off" id="brand" placeholder="Enter Brand Name">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="category">Category</label>
                            <input type="text" class="form-control" name="category" required autocomplete="off" id="category" placeholder="Enter Category">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subCategory">Sub category</label>
                            <input type="text" class="form-control" name="subCategory" required autocomplete="off" id="subCategory" placeholder="Enter Sub Category">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" required autocomplete="off" id="city" placeholder="Enter Your City">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="purchasedOn">Date Of Purchase</label>
                            <input type="text" class="form-control" required name="purchasedOn" autocomplete="off" id="purchasedOn" placeholder="Purchased On">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea class="form-control textarea" required rows="5" name="description" id="text" placeholder="Please describe about your product in this section."></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                       <p text-align="center"><button type="submit" class="btn main-btn pull-right btn-success">Post Ad</button></p>
                    </div>
                </div>
            </form>
